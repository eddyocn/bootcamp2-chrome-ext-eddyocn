{
  "manifest_version": 3,
  "name": "Helper",
  "version": "1.0.0",
  "description": "Extensão prática do Bootcamp II — feita para aprender e testar recursos do Manifest V3.",
  "author": "eddyocn",
  "homepage_url": "https://github.com/eddyocn/bootcamp2-chrome-ext-eddyocn",
  "minimum_chrome_version": "110",

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_title": "Helper",
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },

  "background": {
    "service_worker": "src/background/service-worker.js",
    "type": "module"
  },

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
